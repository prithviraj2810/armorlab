<BaseScreen>
    MDBoxLayout:
        orientation: "vertical"
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: 'images/PlaceHolder_Background_Image.jpeg'
        MDToolbar: 
            title: "Armor Lab"
			id: toolbar
            left_action_items: [["menu", lambda x: app.menuClicked()]]
            right_action_items: [["dots-vertical", lambda x: app.callback1()]]
            md_bg_color: app.theme_cls.accent_color
            spacing: 10

        MDBoxLayout:
			orientation: "vertical"
			spacing: 10
			padding: [10,10,0,0]
			MDLabel:
				text: "Name: Prithviraj"
			MDLabel:
				text: "Affiliation: University of California San Diego"
			MDLabel:
				text: "Height: 150 cm"
			MDLabel:
				text: "Weight: 150 lbs"
			
        MDBoxLayout:
            size_hint_y: None
			size_hint_x: None
			height: dp(400)
			width: dp(400)
            id: box
            pos_hint:{"center_x":0.5,"center_y":1}
            Image:
				source:'graphs/radarPlot.jpeg'
				allow_stretch: True

        MDBoxLayout:
            MDBottomAppBar: 
                md_bg_color: 0, 0, 1, 1
                MDToolbar: 
                    icon: "git"
                    type: "bottom"
                    mode: "center"
                    on_action_button: root.manager.current = 'GitButtonScreen'
    
<GitButtonScreen>
	MDBoxLayout:
        orientation: "vertical"
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
		MDLabel:
			text: "CLICKED GIT BUTTON"
		Button:
			text: "go back"
			on_press: root.manager.current = "BaseScreen"

<MenuToggledScreen>
	MDGridLayout:
		cols: 1
		rows: 5
		MDToolbar: 
			title: "Armor Lab"
			id: toolbar
            left_action_items: [["menu", lambda x: app.menuUnclicked()]]
			right_action_items: [["dots-vertical", lambda x: app.callback1()]]
            md_bg_color: app.theme_cls.accent_color
            spacing: 10
		Button:
			text: 'Place Holder 1'
		Button:
			text: 'Place Holder 2'
		Button:
			text: 'Place Holder 3'
		Button:
			text: 'Place Holder 4'